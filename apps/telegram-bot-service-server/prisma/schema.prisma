datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  chatName  String?
  chatType  String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  messages  Message[]
  updatedAt DateTime  @updatedAt
}

model Message {
  chat      Chat?    @relation(fields: [chatId], references: [id])
  chatId    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Keyword {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  importance Int?
  keyword    String?
  updatedAt  DateTime @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  messages  Message[]
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}
